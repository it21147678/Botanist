<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailTitle1"
        android:text="Title"
        android:textSize="24sp"
        android:layout_marginTop="14dp"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:textColor="@color/Black_30"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/detailImage1"
        android:scaleType="fitXY"
        android:padding="8dp"
        android:layout_gravity="center"
        android:src="@drawable/uploadimg"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailpriority1"
        android:text="Priority"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:textColor="@color/Black_30"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailprice1"
        android:text="Price"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:textColor="@color/Black_30"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detaildesc1"
        android:text="Description"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:textColor="@color/Black_30"
        android:layout_gravity="center"/>



    <Button
        android:id="@+id/btnforward_cart1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/cardmargins"
        android:layout_marginRight="@dimen/cardmargins"
        android:layout_marginTop="60dp"

        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/DarkSlateGray_10"
        android:paddingBottom="4dp"
        android:text="@string/btnforward"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/deletedata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/cardmargins"
        android:layout_marginRight="@dimen/cardmargins"
        android:layout_marginTop="0dp"

        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/DarkSlateGray_10"
        android:paddingBottom="4dp"
        android:text="Edit Data"
        android:textSize="16sp"
        android:textStyle="bold" />









</LinearLayout>