<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard1"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="10dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/recImage1"
            android:src="@drawable/uploadimg"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="3dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedImageVieeRounded"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/recTitle1"
            android:text="Title"
            android:textColor="@color/Black_30"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/recImage1"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/recPriority1"
            android:text="Priority"
            android:textColor="@color/Black_30"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="70dp"
            android:layout_toEndOf="@+id/recTitle1"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/recPrice1"
            android:text="Price"
            android:textColor="@color/Black_30"
            android:textSize="15dp"
            android:layout_marginTop="38dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/recImage1"/>

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:id="@+id/recDesc1"
            android:text="Description"
            android:textColor="@color/Black_30"
            android:textSize="14dp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="10dp"
            android:maxLines="3"
            android:layout_toEndOf="@+id/recImage1"
            android:layout_below="@+id/recPrice1"
            android:layout_marginBottom="5dp"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>